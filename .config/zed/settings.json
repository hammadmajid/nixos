// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run the `open default settings` command
// from the command palette or from `Zed` application menu.
{
  "experimental.theme_overrides": {
    // https://github.com/zed-industries/zed/issues/14955
    "title_bar.inactive_background": "#2b2d30"
  },
  "features": {
    "inline_completion_provider": "none"
  },
  "autosave": "on_focus_change",
  "confirm_quit": true,
  "tabs": {
    "git_status": true
  },
  "ensure_final_newline_on_save": true,
  "format_on_save": "off",
  "theme": "JetBrains New Dark",
  "vim_mode": false,
  "vim": {
    // "always": use system clipboard
    // "never": don't use system clipboard
    // "on_yank": use system clipboard for yank operations
    "use_system_clipboard": "always",
    // Lets `f` and `t` motions extend across multiple lines
    "use_multiline_find": true,
    "use_smartcase_find": true
  },
  "git": {
    "git_gutter": "tracked_files",
    "inline_blame": {
      "enabled": false
    }
  },
  "relative_line_numbers": true,
  "vertical_scroll_margin": 1,
  "ui_font_size": 16,
  "buffer_font_size": 16,
  "terminal": {
    "font_size": 14,
    "font_family": "JetBrainsMono Nerd Font",
    "shell": {
      "program": "fish"
    },
    "copy_on_select": true
  }
}
